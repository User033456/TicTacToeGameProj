<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToeGameProj.MainPage">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout x:Name="Layy" Grid.Row="0">
            <StackLayout x:Name="Statisticlay" Orientation="Horizontal">
                <Label Margin="5">X</Label>
                <Label Margin="5" x:Name="ScoreX">0</Label>
                <Label Margin="5">0</Label>
                <Label Margin="5" x:Name="Score0">0</Label>
                <StackLayout Margin="5" x:Name="TimerLay">
                    <Label Margin="5">Time</Label>
                    <Label Margin="5" x:Name="LTimer">f</Label>
                </StackLayout>
            </StackLayout>
            <Button Clicked="NewGameStartMenuItem_OnClick" Text="Новая игра"></Button>
        </StackLayout>
        <Grid Grid.Row="1" x:Name = "ButtonsGrid">

        </Grid>
    </Grid>

</ContentPage>
